// Because the base nRF9160 Devicetree files separate Secure/Non-Secure by
// completely different files, we will expect the thing including us to include
// the proper upstream nrf9160_sica.dtsi/nrf9160ns_sica.dtsi file.

/ {
    model = "Skywire Nano Dev Kit";
    compatible =
        "nordic,pca10090-dk",
        "nordic,nrf9160-sica",
        "nordic,nrf9160",
        "nimbelink,skywire-nano";

    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpio0 2 GPIO_INT_ACTIVE_HIGH>;
            label = "Green LED 0";
        };
        led1: led_1 {
            gpios = <&gpio0 3 GPIO_INT_ACTIVE_HIGH>;
            label = "Green LED 1";
        };
        led2: led_2 {
            gpios = <&gpio0 4 GPIO_INT_ACTIVE_HIGH>;
            label = "Green LED 2";
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpio0 6 GPIO_PUD_PULL_UP>;
            label = "Push button 0";
        };
    };

    aliases {
        led0 = &led0;
        led1 = &led1;
        led2 = &led2;
        sw0 = &button0;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&uart0 {
    status = "okay";
    current-speed = <115200>;
    tx-pin = <29>;
    rx-pin = <28>;
    rts-pin = <27>;
    cts-pin = <26>;
};

&uart1 {
    status = "okay";
    current-speed = <115200>;
    tx-pin = <1>;
    rx-pin = <0>;
    rts-pin = <14>;
    cts-pin = <15>;
};

&i2c2 {
    compatible = "nordic,nrf-twim";
    status = "okay";
    sda-pin = <30>;
    scl-pin = <31>;
};

&pwm0 {
    status = "okay";
    ch0-pin = <2>;
    ch1-pin = <3>;
    ch2-pin = <4>;
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <19>;
    mosi-pin = <18>;
    miso-pin = <17>;
};

&timer0 {
    status = "okay";
};

&timer1 {
    status = "okay";
};

&timer2 {
    status = "okay";
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;
    };
};

&sram0 {
    reg = <0x20000000 DT_SIZE_K(64)>;
};
